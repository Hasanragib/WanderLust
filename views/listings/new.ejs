<% layout("/layouts/boilerplate") %>

<body>
    <div class="row">
        <div class="col-8 offset">
            <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                <fieldset>  
                    <legend><b>Create New Listing</b></legend>
                    <div>
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" id="title" class="form-control" required placeholder="Enter title" type="text">
                        <div class="invalid-feedback">
                            Please enter a valid title.
                        </div>
                    </div>
                    <br>
                    <div>
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" id="description" class="form-control" required placeholder="Enter Description" type="text"></textarea>
                        <div class="invalid-feedback">
                            Please enter a valid description.
                        </div>
                    </div>
                    <br>
                    <div>
                        <label for="image" class="form-label">Upload Image</label>
                        <input name="listing[image]" id="image" class="form-control" type="file">
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" id="price" class="form-control" required placeholder="Enter Price" type="number">
                            <div class="invalid-feedback">
                                Please enter a valid price.
                            </div>
                        </div>
                        <div class="col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" id="country" class="form-control" required placeholder="Enter Country" type="text">
                            <div class="invalid-feedback">
                                Please enter a valid country.
                            </div>
                        </div>
                    </div>
                    <br>
                    <div>
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" id="location" class="form-control" required placeholder="Enter Location" type="text">
                        <div class="invalid-feedback">
                            Please enter a valid location.
                        </div>
                    </div>

                    <!-- Category Dropdown -->
                    <div class="mt-3">
                        <label for="category" class="form-label">Category</label>
                        <select name="listing[category]" id="category" class="form-select" required>
                            <option value="" disabled selected>Select a Category</option>
                            <option value="Room">Room</option>
                            <option value="Top-cities">Top Cities</option>
                            <option value="Mountains">Mountains</option>
                            <option value="Castles">Castles</option>
                            <option value="Amazing-pool">Amazing Pool</option>
                            <option value="Camping">Camping</option>
                            <option value="Farms">Farms</option>
                            <option value="Arctic">Arctic</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a valid category.
                        </div>
                    </div>
                    
                    <br>
                    <button class="btn btn-dark add-btn">Add</button>
                </fieldset>
            </form>
        </div>
    </div>
    <br>
</body>
