<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-6 offset-3" >
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <fieldset>  
                <legend class="offset-3 mb-3"><b>SignUp on WanderLust</b></legend>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" class="form-control" required type="text">
                    <div class="invalid-feedback">
                        Please enter a valid Username.
                    </div>
                </div>   

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" id="email" class="form-control" required type="email">
                </div>  

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" class="form-control" required type="password">
                </div>  
                <button class="btn btn-light">SignUp</button>
            </fieldset>    
        </form>
    </div>
</div>