<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <fieldset>
                <legend class="mb-3"><h2><b>Sign In</b></h2></legend>
                <h4 class="mb-3">Enter your Credentials:</h4>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" class="form-control" required type="text">
                    <div class="invalid-feedback">
                        Please enter a valid Username.
                    </div>
                </div>  

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" class="form-control" required type="password">
                    <div class="invalid-feedback">
                        Please enter a valid Password.
                    </div>
                </div>  
                <button class="btn btn-light">Login</button>
            </fieldset>
        </form>
    </div>
</div>